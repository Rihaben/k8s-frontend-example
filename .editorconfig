# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,css,scss,html,json,yaml,yml}]
tab_width = 2
indent_size = 2
max_line_length = 140

[*.md]
max_line_length = off
trim_trailing_whitespace = false
